<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/drawerFragment">

    <fragment
        android:id="@+id/drawerFragment"
        android:name="cs.vsu.ru.application.view.fragment.DrawerFragment"
        android:label="DrawerFragment"
        tools:layout="@layout/fragment_drawer">
        <action
            android:id="@+id/action_drawerFragment_to_addNewLocation"
            app:destination="@id/addNewLocation"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_drawerFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewLocation"
        android:name="cs.vsu.ru.application.view.fragment.AddNewLocationFragment"
        android:label="AddNewLocation"
        tools:layout="@layout/fragment_add_new_location"/>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="cs.vsu.ru.application.view.fragment.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/about_application" />
</navigation>