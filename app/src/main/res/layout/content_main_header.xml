<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/header_animation"
    tools:background="@drawable/background_daytime">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/toolbar_burger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_margin"
        android:layout_marginTop="@dimen/toolbar_margin"
        android:background="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_temperature_now_tv"
        style="@style/Text.BigTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="6°" />

    <TextView
        android:id="@+id/main_location_toolbar_name_tv"
        style="@style/Text.BigLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_margin"
        app:layout_constraintStart_toEndOf="@id/toolbar_burger"
        app:layout_constraintTop_toTopOf="@id/toolbar_burger"
        tools:text="Воронеж" />

    <TextView
        android:id="@+id/main_location_name_tv"
        style="@style/Text.BigLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/main_temperature_now_tv"
        app:layout_constraintTop_toBottomOf="@id/main_temperature_now_tv"
        tools:text="Воронеж" />

    <TextView
        android:id="@+id/main_temperature_today_tv"
        style="@style/Text.SmallInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="6° / 2°" />

    <TextView
        android:id="@+id/main_daytime_tv"
        style="@style/Text.SmallInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/main_temperature_today_tv"
        app:layout_constraintTop_toBottomOf="@+id/main_temperature_today_tv"
        tools:text="чт, 14:25" />

    <TextView
        android:id="@+id/main_feels_like_temperature_tv"
        style="@style/Text.SmallInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/main_temperature_today_tv"
        app:layout_constraintTop_toTopOf="@+id/main_temperature_today_tv"
        tools:text="Ощущается как 2°" />

</androidx.constraintlayout.motion.widget.MotionLayout>