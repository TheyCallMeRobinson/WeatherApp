<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/main_content_animation">

    <ImageView
        android:id="@+id/main_end_background_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@color/dark_blue"/>

    <ImageView
        android:id="@+id/main_start_background_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/background_daytime" />

    <include
        android:id="@id/fragment_content_main_header"
        layout="@layout/content_main_header"  />

    <include
        android:id="@id/main_body_list"
        layout="@layout/content_main_body_list"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/main_toolbar_burger"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_start_margin"
        android:layout_marginTop="@dimen/toolbar_top_margin"
        android:background="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/to_fragment_main_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/toolbar_top_margin"
        android:background="@drawable/ic_car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/fragment_content_main_progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="visible" />

</androidx.constraintlayout.motion.widget.MotionLayout>