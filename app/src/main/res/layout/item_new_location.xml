<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/item_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="10pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Воронеж" />

    <TextView
        android:id="@+id/item_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="6pt"
        app:layout_constraintStart_toStartOf="@+id/item_location_name"
        app:layout_constraintTop_toBottomOf="@+id/item_location_name"
        tools:text="Россия" />

    <TextView
        android:id="@+id/item_latitude"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/latitude"
        android:textSize="6pt"
        app:layout_constraintBottom_toTopOf="@id/item_longitude"
        app:layout_constraintEnd_toStartOf="@id/item_latitude_value"
        app:layout_constraintTop_toTopOf="@+id/item_location_name" />

    <TextView
        android:id="@+id/item_longitude"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="@string/longitude"
        android:textSize="6pt"
        app:layout_constraintBottom_toBottomOf="@+id/item_country_name"
        app:layout_constraintStart_toStartOf="@id/item_latitude"
        app:layout_constraintTop_toBottomOf="@id/item_latitude" />

    <TextView
        android:id="@+id/item_latitude_value"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textSize="8pt"
        app:layout_constraintBottom_toBottomOf="@id/item_latitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_latitude"
        tools:text="39.2000" />

    <TextView
        android:id="@+id/item_longitude_value"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/item_longitude"
        app:layout_constraintStart_toStartOf="@id/item_latitude_value"
        app:layout_constraintTop_toTopOf="@id/item_longitude"
        tools:text="51.1000"/>

</androidx.constraintlayout.widget.ConstraintLayout>