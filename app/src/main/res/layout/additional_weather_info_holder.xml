<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/additional_weather_info_holder_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/additional_weather_info_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp">

        <!--UV index-->
        <ImageView
            android:id="@+id/uv_index_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_sunny"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/uv_index_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="УФ-индекс"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/uv_index_icon"
            app:layout_constraintStart_toStartOf="@+id/uv_index_icon"
            app:layout_constraintTop_toBottomOf="@+id/uv_index_icon" />

        <TextView
            android:id="@+id/uv_index_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/uv_index_tv"
            app:layout_constraintStart_toStartOf="@id/uv_index_tv"
            app:layout_constraintTop_toBottomOf="@id/uv_index_tv" />

        <!--Humidity-->
        <ImageView
            android:id="@+id/humidity_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_water_drop"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toEndOf="@id/uv_index_icon"
            app:layout_constraintEnd_toStartOf="@id/wind_icon"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/humidity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Влажность"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/humidity_icon"
            app:layout_constraintStart_toStartOf="@+id/humidity_icon"
            app:layout_constraintTop_toBottomOf="@+id/humidity_icon" />

        <TextView
            android:id="@+id/humidity_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/humidity_tv"
            app:layout_constraintStart_toStartOf="@id/humidity_tv"
            app:layout_constraintTop_toBottomOf="@id/humidity_tv" />

        <!--Wind speed-->
        <ImageView
            android:id="@+id/wind_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_wind"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/wind_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ветер"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/wind_icon"
            app:layout_constraintStart_toStartOf="@+id/wind_icon"
            app:layout_constraintTop_toBottomOf="@+id/wind_icon" />

        <TextView
            android:id="@+id/wind_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/wind_tv"
            app:layout_constraintStart_toStartOf="@id/wind_tv"
            app:layout_constraintTop_toBottomOf="@id/wind_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>