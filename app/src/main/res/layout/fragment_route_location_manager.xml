<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_round_top"
    android:backgroundTint="@color/slightly_dark_blue">

    <View
        android:id="@+id/pull_bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shape_pull_up"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/start_route_location_et"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:background="@drawable/et_background"
        android:paddingStart="10dp"
        android:paddingEnd="55dp"
        android:hint="Откуда"
        android:textColorHint="@color/white"
        android:isScrollContainer="true"
        app:layout_constraintTop_toBottomOf="@id/pull_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/end_route_location_et"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/et_background"
        android:paddingStart="10dp"
        android:paddingEnd="55dp"
        android:hint="Куда"
        android:textColorHint="@color/white"
        android:isScrollContainer="true"
        app:layout_constraintTop_toBottomOf="@id/start_route_location_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/start_route_pin_img"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_pin_drop"
        app:layout_constraintEnd_toEndOf="@id/start_route_location_et"
        app:layout_constraintTop_toTopOf="@id/start_route_location_et"
        app:layout_constraintBottom_toBottomOf="@id/start_route_location_et"/>

    <ImageView
        android:id="@+id/end_route_pin_img"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_pin_drop"
        app:layout_constraintEnd_toEndOf="@id/end_route_location_et"
        app:layout_constraintTop_toTopOf="@id/end_route_location_et"
        app:layout_constraintBottom_toBottomOf="@id/end_route_location_et"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_down"
        android:background="@color/slightly_dark_blue"
        app:layout_constraintTop_toTopOf="@id/start_route_location_et"
        app:layout_constraintBottom_toBottomOf="@id/end_route_location_et"
        app:layout_constraintStart_toStartOf="@id/start_route_location_et"
        app:layout_constraintEnd_toEndOf="@id/start_route_location_et"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_route_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_button"
        android:backgroundTint="@color/slightly_light_blue"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:text="@string/get_route_info"
        app:layout_constraintTop_toBottomOf="@id/end_route_location_et"/>


</androidx.constraintlayout.widget.ConstraintLayout>