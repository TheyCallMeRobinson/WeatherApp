<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <EditText
        android:id="@+id/fragment_add_new_location_et"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:background="@color/transparent60_white"
        app:layout_constraintEnd_toStartOf="@id/fragment_find_locations_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_find_locations_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:text="@string/search"
        android:drawableStart="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_add_new_location_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_add_new_location_et"
        app:layout_constraintTop_toTopOf="@+id/fragment_add_new_location_et" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_new_locations_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_add_new_location_et" />
</androidx.constraintlayout.widget.ConstraintLayout>