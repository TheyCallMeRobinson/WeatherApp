<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/route_content_header_animation">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/main_background_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/black"
        app:altSrc="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/background_daytime" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/main_toolbar_burger"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_start_margin"
        android:layout_marginTop="@dimen/toolbar_top_margin"
        android:background="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/to_fragment_main_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/toolbar_top_margin"
        android:background="@drawable/ic_weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/fragment_content_route_header"
        layout="@layout/content_route_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar_burger" />



</androidx.constraintlayout.widget.ConstraintLayout>