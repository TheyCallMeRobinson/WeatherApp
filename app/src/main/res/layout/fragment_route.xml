<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/route_content_header_animation"
    tools:background="@drawable/background_daytime">

    <ImageView
        android:id="@+id/end_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@color/dark_blue"/>

    <ImageView
        android:id="@+id/start_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/background_daytime"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/main_toolbar_burger"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_start_margin"
        android:layout_marginTop="@dimen/toolbar_top_margin"
        android:background="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/to_fragment_main_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/toolbar_top_margin"
        android:background="@drawable/ic_weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/start_route_location"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/margin_horizontal"
        android:dropDownVerticalOffset="70dp"
        android:background="@drawable/shape_round_background"
        android:popupBackground="@drawable/shape_round_background_opaque"/>

    <ImageView
        android:id="@+id/route_to_location"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_arrow_right" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/end_route_location"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:background="@drawable/shape_round_background" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get_route_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button"
        android:text="@string/get_route_info" />

    <include
        android:id="@+id/route_body"
        layout="@layout/content_route_body"/>

</androidx.constraintlayout.motion.widget.MotionLayout>