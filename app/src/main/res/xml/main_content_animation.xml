<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/collapse_header"
        motion:constraintSetStart="@id/expand_header"
        motion:duration="1500">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/main_body_list"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/expand_header">
        <Constraint
            android:id="@id/main_motion_header"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/main_body_list"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/main_body_list_expanded_top_margin"
            android:layout_marginStart="@dimen/margin_horizontal"
            android:layout_marginEnd="@dimen/margin_horizontal"
            android:layout_marginBottom="47dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/main_motion_header" />

        <Constraint
            android:id="@id/main_background_img">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapse_header">
        <Constraint
            android:id="@id/main_motion_header"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:motionProgress="1.0"/>

        <Constraint
            android:id="@id/main_body_list"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin_horizontal"
            android:layout_marginEnd="@dimen/margin_horizontal"
            android:layout_marginBottom="47dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/main_motion_header" />

        <Constraint
            android:id="@id/main_background_img">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>
</MotionScene>