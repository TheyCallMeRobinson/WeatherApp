<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/route_weather_menu_transition"
        motion:constraintSetStart="@id/hide_button"
        motion:constraintSetEnd="@id/show_button"
        motion:duration="500"/>

    <ConstraintSet
        android:id="@+id/hide_button">

        <EditText
            android:id="@id/start_route_location_et"
            android:layout_width="0dp"
            android:layout_height="50dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@id/end_route_location_et"
            android:layout_width="0dp"
            android:layout_height="50dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/start_route_location_et" />

        <ImageView
            android:id="@id/start_route_pin_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toBottomOf="@id/start_route_location_et"
            motion:layout_constraintEnd_toEndOf="@id/start_route_location_et"
            motion:layout_constraintTop_toTopOf="@id/start_route_location_et" />

        <ImageView
            android:id="@id/end_route_pin_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toBottomOf="@id/end_route_location_et"
            motion:layout_constraintEnd_toEndOf="@id/end_route_location_et"
            motion:layout_constraintTop_toTopOf="@id/end_route_location_et" />

        <ImageView
            android:id="@id/start_to_end_arrow_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toBottomOf="@id/end_route_location_et"
            motion:layout_constraintEnd_toEndOf="@id/start_route_location_et"
            motion:layout_constraintStart_toStartOf="@id/start_route_location_et"
            motion:layout_constraintTop_toTopOf="@id/start_route_location_et" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@id/get_route_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/end_route_location_et" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/locations_data_manager_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/get_route_button" />

        <ProgressBar
            android:id="@id/menu_progress_bar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            motion:layout_constraintTop_toTopOf="@id/locations_data_manager_list"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/show_button"
        motion:deriveConstraintsFrom="@id/hide_button">

        <EditText
            android:id="@id/start_route_location_et"
            android:layout_width="0dp"
            android:layout_height="50dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@id/end_route_location_et"
            android:layout_width="0dp"
            android:layout_height="50dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/start_route_location_et" />

        <ImageView
            android:id="@id/start_route_pin_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toBottomOf="@id/start_route_location_et"
            motion:layout_constraintEnd_toEndOf="@id/start_route_location_et"
            motion:layout_constraintTop_toTopOf="@id/start_route_location_et" />

        <ImageView
            android:id="@id/end_route_pin_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toBottomOf="@id/end_route_location_et"
            motion:layout_constraintEnd_toEndOf="@id/end_route_location_et"
            motion:layout_constraintTop_toTopOf="@id/end_route_location_et" />

        <ImageView
            android:id="@id/start_to_end_arrow_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            motion:layout_constraintBottom_toBottomOf="@id/end_route_location_et"
            motion:layout_constraintEnd_toEndOf="@id/start_route_location_et"
            motion:layout_constraintStart_toStartOf="@id/start_route_location_et"
            motion:layout_constraintTop_toTopOf="@id/start_route_location_et" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@id/get_route_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/end_route_location_et" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/locations_data_manager_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/get_route_button" />

        <ProgressBar
            android:id="@id/menu_progress_bar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            motion:layout_constraintTop_toTopOf="@id/locations_data_manager_list"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>

</MotionScene>