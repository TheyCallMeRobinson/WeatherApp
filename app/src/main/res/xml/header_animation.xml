<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/collapsed"
        motion:constraintSetStart="@id/expanded">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/scroll_view"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>
<!--        Main location tv becomes transparent on 30s frame-->
            <KeyAttribute
                motion:motionTarget="@id/main_location_name_tv"
                motion:framePosition="0">
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1.0" />
            </KeyAttribute>
            <KeyAttribute
                motion:motionTarget="@id/main_location_name_tv"
                motion:framePosition="30">
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0" />
            </KeyAttribute>

<!--        Feels like tv becomes transparent on 30s frame-->
            <KeyAttribute
                motion:motionTarget="@id/main_feels_like_temperature_tv"
                motion:framePosition="0"
                android:translationX="4dp">
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="1.0" />
            </KeyAttribute>
            <KeyAttribute
                motion:motionTarget="@id/main_feels_like_temperature_tv"
                motion:framePosition="30"
                android:translationX="40dp">
                <CustomAttribute
                    motion:attributeName="alpha"
                    motion:customFloatValue="0" />
            </KeyAttribute>

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@id/main_temperature_today_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="@dimen/activity_main_motion_start_margin"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/main_location_name_tv" />

        <Constraint
            android:id="@id/main_header">
            <CustomAttribute
                motion:attributeName="background"
                motion:customColorValue="#D81B60"/>
        </Constraint>

        <Constraint
            android:id="@id/main_temperature_now_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar_burger" />

        <Constraint
            android:id="@id/main_location_toolbar_name_tv">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0.0"/>
        </Constraint>
        <Constraint
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            motion:layout_constraintTop_toBottomOf="@+id/main_daytime_tv"
            android:id="@+id/scroll_view"
            motion:layout_constraintBottom_toBottomOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@id/main_temperature_today_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="10dp"
            motion:layout_constraintStart_toEndOf="@+id/main_temperature_now_tv"
            motion:layout_constraintTop_toTopOf="@+id/main_temperature_now_tv" />

        <Constraint
            android:id="@id/main_location_toolbar_name_tv">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1.0"/>
        </Constraint>

        <Constraint
            android:id="@id/main_temperature_now_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="35dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/toolbar_burger"/>

        <Constraint
            android:id="@id/main_header">
            <CustomAttribute
                motion:attributeName="background"
                motion:customColorValue="#9999FF" />
        </Constraint>

    </ConstraintSet>
</MotionScene>