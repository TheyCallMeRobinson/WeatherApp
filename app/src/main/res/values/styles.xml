<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.BigTemperature">
        <item name="android:fontFamily">@font/geliat_extralight</item>
        <item name="android:maxLength">5</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">32pt</item>
    </style>

    <style name="Text.BigLocationName">
        <item name="android:textSize">15pt</item>
    </style>

    <style name="Text.ToolbarLocationName">
        <item name="android:textSize">10pt</item>
    </style>

    <style name="Text.SmallInfo">
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="AddLocationTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>